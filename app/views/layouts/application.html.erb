
<!DOCTYPE html>
<html>
<head>
  <title>RottenMangoes</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value) %>
  <% end %>
    <div class="container">
      <ol class="breadcrumb">
      <% if current_user %>
          <% if current_user.admin == true %>   
          <%= link_to "Home", root_path %> | <%= link_to "Users list", admin_users_path %> | <%= link_to "Log out", session_path("current"), method: :delete %> 
          <% else current_user %>
           <%= link_to "Home", index_path%> | <%= link_to "Log out", session_path("current"), method: :delete %> 
          <% end %>
        <% else %>
          <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
        <% end %>
      </ol>
      <div class="jumbotron">
        <h1> <%= link_to "Rotten Mangoes", root_path %></h1>
        <p>The best choice to review/post a movie !</p>
        <p><%= link_to "Post a Movie", new_movie_path, class: 'btn btn-primary btn-lg' %>
      </div>
      <%= yield %>
    </div>
  <%= render 'layouts/footer' %>
</body>
</html>